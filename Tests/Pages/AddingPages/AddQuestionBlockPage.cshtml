@page
@model Tests.Pages.AddQuestionBlockPageModel
@{
}


<div class="container">
    <div class="row">
        <form method="post" class="col-8 offset-2">
            <div>
                <label asp-for="AddingQuestionBlock.TestId"></label>
                <select class="form-control" name="TestId">
                    @foreach(var e in Model.Tests)
                    {
                        <option value="@e.Id">@e.TestTitle</option>
                    }
                </select>
            </div>
            <div>
                <label asp-for="AddingQuestionBlock.Question"></label>
                <input asp-for="AddingQuestionBlock.Question" class="form-control" type="text" id="Question" name="Question" required>
            </div>
            <div>
                <label asp-for="AddingQuestionBlock.Answer1"></label>
                <input asp-for="AddingQuestionBlock.Answer1" class="form-control" type="text" id="Answer1" name="Answer1" required>
            </div>
            <div>
                <label asp-for="AddingQuestionBlock.Answer2"></label>
                <input asp-for="AddingQuestionBlock.Answer2" class="form-control" type="text" id="Answer2" name="Answer2" required>
            </div>
            <div>
                <label asp-for="AddingQuestionBlock.Answer3"></label>
                <input asp-for="AddingQuestionBlock.Answer3" class="form-control" type="text" id="Answer3" name="Answer3" required>
            </div>
            <div>
                <label asp-for="AddingQuestionBlock.Answer4"></label>
                <input asp-for="AddingQuestionBlock.Answer4" class="form-control" type="text" id="Answer4" name="Answer4" required>
            </div>
            <div>
                <label asp-for="AddingQuestionBlock.RightAnswerNum"></label>
                <input asp-for="AddingQuestionBlock.RightAnswerNum" class="form-control" type="number" id="RightAnswerNum" name="RightAnswerNum" required>
            </div>
            <button class="btn btn-secondary form-control" type="submit">Сохранить</button>
        </form>
        <div class="col-8 offset-2 alert-success">@TempData["SuccessMessage"]</div>
    </div>
</div>
