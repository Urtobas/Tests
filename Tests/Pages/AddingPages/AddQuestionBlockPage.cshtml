@page "{id?}"
@model Tests.Pages.AddQuestionBlockPageModel
@{
    string userName = "";
    if (HttpContext.User != null)
    {
        userName = HttpContext.User.Identity.Name;
    }
}


<div class="container">
    <div class="row">
        <form method="post" class="col-8 offset-2">
            <div>
                <label asp-for="AddingQuestionBlock.TestId"></label>
                <select class="form-control mb-4" name="TestId">
                    @foreach (var e in Model.Tests)
                    {
                        <option value="@e.Id">@e.TestTitle</option>
                    }
                </select>
            </div>
            <div>
                <input asp-for="AddingQuestionBlock.AuthorName" class="form-control mb-4"
                       id="AuthorName" name="AuthorName" required readonly value="@userName" />
            </div>
            <div>
                <label asp-for="AddingQuestionBlock.Question"></label>
                <textarea asp-for="AddingQuestionBlock.Question" class="form-control mb-4" id="Question" name="Question" required></textarea>
            </div>
            <div>
                <label asp-for="AddingQuestionBlock.Answer1"></label>
                <textarea asp-for="AddingQuestionBlock.Answer1" class="form-control mb-4" id="Answer1" name="Answer1" required></textarea>
            </div>
            <div>
                <label asp-for="AddingQuestionBlock.Answer2"></label>
                <textarea asp-for="AddingQuestionBlock.Answer2" class="form-control mb-4" id="Answer2" name="Answer2" required></textarea>
            </div>
            <div>
                <label asp-for="AddingQuestionBlock.Answer3"></label>
                <textarea asp-for="AddingQuestionBlock.Answer3" class="form-control mb-4" id="Answer3" name="Answer3" required></textarea>
            </div>
            <div>
                <label asp-for="AddingQuestionBlock.Answer4"></label>
                <textarea asp-for="AddingQuestionBlock.Answer4" class="form-control mb-4" id="Answer4" name="Answer4" required></textarea>
            </div>
            <div>
                <label asp-for="AddingQuestionBlock.RightAnswerNum"></label>
                <input asp-for="AddingQuestionBlock.RightAnswerNum" class="form-control mb-2" type="number" min="1" max="4" id="RightAnswerNum" name="RightAnswerNum" required>
            </div>
            <button class="btn btn-secondary form-control" type="submit">Сохранить</button>
            @if (!String.IsNullOrEmpty(TempData["SuccessMessage"].ToString()))
            {
                <div class="col-8 alert-success p-2 m-2">@TempData["SuccessMessage"]</div>
            }

        </form>

    </div>
</div>
