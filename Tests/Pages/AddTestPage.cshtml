@page
@model Tests.Pages.AddTestPageModel
@{
}
<div class="container">
    <div class="row">
        <form method="post" class="col-8 offset-2">
            <div>
                <label asp-for="TestProp.TestTitle"></label>
                <input asp-for="TestProp.TestTitle" class="form-control" id="Language" name="Language" required>
            </div>
            <div>
                <label asp-for="TestProp.DifficultyLevel"></label>
                <input asp-for="TestProp.DifficultyLevel" class="form-control" id="DifficultyLevel" name="DifficultyLevel" required>
            </div>
            <div>
                <label asp-for="TestProp.Language"></label>
                <select asp-for="TestProp.Language" class="form-control" id="Language" name="Language" require>
                    @foreach(var e in Model.Languages)
                    {
                        <option>@e.LanguageTitle</option>
                    }
                </select>
            </div>

            <button class="btn btn-secondary form-control" type="submit">Сохранить</button>
        </form>
    </div>
</div>
