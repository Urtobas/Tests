@page
@model Tests.Pages.TestListPageModel
@{
}

<h1>Список тестов</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <img src="~/icons/list.svg" class="img-fluid" />
        </div>
        <div class="col-9">
            <table class="table table-striped table-secondary">
                <thead>
                    <tr>
                        <td class="bg-primary text-white fw-bold">Название теста</td>
                        <td class="bg-primary text-white fфw-bold">Автор</td>
                        <td class="bg-primary text-white fw-bold">Уровень сложности</td>
                        <td class="bg-primary text-white fw-bold">Кол-во вопросов</td>
                    </tr>
                </thead>
                @foreach (var e in Model.TestList)
                {
                    <tr>
                        <td><a class="link" asp-page="/SolvingTestPage" asp-route-id="@e.Id">@e.TestTitle</a></td>
                        <td>@e.Author</td>
                        <td>@e.DifficultyLevel</td>
                        <td title="Посмортеть статистику пользователя">
                            <a asp-page="/TestPage" asp-route-id="@e.Id"><img src="~/icons/testing.svg" style="height:1.5rem" /></a>
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>
</div>

