@page
@model Tests.Pages.TestListPageModel
@{
}

<h1>Список тестов</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <img src="~/icons/list.svg" class="img-fluid" />
        </div>
        <div class="col-9">
            <table class="table table-striped table-secondary">
                <thead>
                    <tr>
                        <td class="bg-primary text-white fw-bold">Название теста</td>
                        <td class="bg-primary text-white fфw-bold">Автор</td>
                        <td class="bg-primary text-white fw-bold">Уровень сложности</td>
                        <td class="bg-primary text-white fw-bold">Язык</td>
                    </tr>
                </thead>
                @foreach (var e in Model.TestList)
                {
                    <tr>
                        <td><a class="text-decoration-none" asp-page="/SolvingTestPage" asp-route-id="@e.Id">@e.TestTitle</a></td>
                        <td>@e.Author</td>
                        <td>@e.DifficultyLevel</td>
                        <td title="Посмортеть статистику пользователя">@e.Language</td>
                    </tr>
                }
            </table>
        </div>

    </div>
</div>

