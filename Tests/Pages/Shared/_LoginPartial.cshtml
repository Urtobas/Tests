@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="d-flex">
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-page="/UserPage" class="btn btn-link" title="Перейти в свой личный кабинет (@User.Identity?.Name)">
            <img src="~/icons/account.svg" style="height:2.2rem;" />
        </a>
        <div class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-link" title="Выход из учетной записи @User.Identity?.Name">
                    <img src="~/icons/logout.svg" style="height:2.2rem;" />
                </button>
            </form>
        </div>
    }
    else
    {
        <div class="nav-item">
            <a class="badge bg-secondary mx-1" asp-area="Identity" asp-page="/Account/Register">Reg</a>
        </div>
        <div class="nav-item">
            <a class="badge bg-secondary mx-1" asp-area="Identity" asp-page="/Account/Login">Log</a>
        </div>
    }
</div>
