@page "{id?}"
@model Tests.Pages.SolvingTestPageModel
@{
}
@if (Model.CurrentTest == null)
{
    <div class="alert">NULL</div>
}
else
{
    <form method="post">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="m-2">
                <div class="form-check">
                    <label class="display-6">@Model.Blocks.ElementAt(i).Question</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="@Model.Blocks.ElementAt(i).Id" name="@("answer" + i.ToString())" value="1">
                    <label class="form-check-label" for="@Model.Blocks.ElementAt(i).Id">@Html.Raw(Model.Blocks.ElementAt(i).Answer1)</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="@Model.Blocks.ElementAt(i).Id" name="@("answer" + i.ToString())" value="2">
                    <label class="form-check-label" for="@Model.Blocks.ElementAt(i).Id">@Html.Raw(Model.Blocks.ElementAt(i).Answer2)</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="Model.Blocks.ElementAt(i).Id" name="@("answer" + i.ToString())" value="3">
                    <label class="form-check-label" for="Model.Blocks.ElementAt(i).Id">@Html.Raw(Model.Blocks.ElementAt(i).Answer3)</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="Model.Blocks.ElementAt(i).Id" name="@("answer" + i.ToString())" value="4">
                    <label class="form-check-label" for="@Model.Blocks.ElementAt(i).Id">@Html.Raw(Model.Blocks.ElementAt(i).Answer4)</label>
                </div>
            </div>
        }
        <input class="btn btn-outline-success" type="submit" value="Отправить тест">
    </form>

}

