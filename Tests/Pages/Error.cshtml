@page

@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="display-header-1 text-danger text-center">Ошибка</h1>
<div class="col-10 offset-1">
    <div class="container-fluid">
        <div class="row">

            <div class="col-3">
                <img src="~/icons/error_circle.svg" class="img-fluid" />
            </div>
            <div class="col-9 text-danger display-9 border border-2 rounded-2 border-danger p-4">
                @Html.Raw(@TempData["ErrorMessage"])
            </div>

        </div>
    </div>
    </div>




